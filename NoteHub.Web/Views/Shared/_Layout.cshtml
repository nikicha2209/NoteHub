<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NoteHub</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css">
    <style>
        body {
            background: linear-gradient(135deg, #1e3c72, #2a5298);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .navbar {
            background: #1b1f3b;
        }

        .navbar-brand {
            color: white;
            font-size: 1.6rem;
            font-weight: bold;
        }

        .navbar a {
            color: white !important;
        }

        .content {
            flex: 1;
            padding: 30px;
        }

        .container-card {
            background: white;
            padding: 20px;
            border-radius: 15px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.2);
            max-width: 800px;
            margin: auto;
        }

        .footer {
            background: #1b1f3b;
            color: white;
            text-align: center;
            padding: 10px;
            font-size: 0.9rem;
        }

        .btn-custom {
            background: #ff7e5f;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            font-weight: bold;
            transition: 0.3s;
        }

        .btn-custom:hover {
            background: #feb47b;
        }

        /* Aнимацията */
        fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .fade-in {
            animation: fadeIn 0.7s ease-in-out;
        }

    </style>
</head>
<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-controller="Note" asp-action="Index">
                <i class="bi bi-journal-bookmark-fill"></i> NoteHub
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Note" asp-action="Index">
                            <i class="bi bi-house-door-fill"></i> Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-custom text-white" asp-controller="Note" asp-action="Create">
                            <i class="bi bi-plus-circle"></i> New Note
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="content fade-in">
        <div class="container-card">
            @RenderBody()
        </div>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <p>© @DateTime.Now.Year NoteHub - Your Personal Notes Organizer 📖</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
