@model NoteHub.Web.ViewModels.NoteViewModel

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-body">
            <h2 class="text-center">Create a Note</h2>

            <form asp-action="Create">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label">Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Enter title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Content" class="form-label">Content</label>
                    <textarea asp-for="Content" class="form-control" rows="5" placeholder="Write your note..."></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success w-100">
                    <i class="bi bi-save"></i> Save Note
                </button>
                <a asp-action="Index" class="btn btn-secondary w-100 mt-2">
                    <i class="bi bi-arrow-left"></i> Back to Notes
                </a>
            </form>
        </div>
    </div>
</div>