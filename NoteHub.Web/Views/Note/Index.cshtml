@model IEnumerable<NoteHub.Web.ViewModels.NoteViewModel>

<div class="container mt-4">
    <h2 class="text-center mb-4">Your Notes</h2>

    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add Note
        </a>
    </div>

    <div class="row">
        @foreach (var note in Model)
        {
            <div class="col-md-4">
                <div class="card shadow-lg mb-4">
                    <div class="card-body">
                        <h5 class="card-title text-primary">@note.Title</h5>
                        
                        <p class="card-text text-muted">
                            @(note.Content.Length > 100 ? note.Content.Substring(0, 100) + "..." : note.Content)
                        </p>

                        <a asp-action="Details" asp-route-id="@note.Id" class="btn btn-info btn-sm">
                            <i class="bi bi-eye"></i> Read More
                        </a>
                        <a asp-action="Edit" asp-route-id="@note.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@note.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>